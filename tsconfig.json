{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": ["node", "vite/client", "vite-plugin-svgr/client"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis":false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*":  ["./src/*"],
      "@shared/*":  ["./src/shared/*"],
      "@components/*":  ["./src/components/*"],
      "@pages/*":  ["./src/pages/*"],
      "@hooks/*":  ["./src/hooks/*"],
      "@hocs/*":  ["./src/hocs/*"],
      "@assets/*":  ["./src/assets/*"],
      "@api/*":  ["./src/api/*"],
      "@utils/*":  ["./src/utils/*"],
      "@stores/*":  ["./src/stores/*"]
    }
  },
  "include": [
    "src"
  ],
}
